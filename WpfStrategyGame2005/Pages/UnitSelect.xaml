<Page x:Class="WpfStrategyGame2005.UnitSelect"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfStrategyGame2005"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="UnitSelect">

    <Grid>
        <Image x:Name="BackgroundImage" Source="/Resources/asd.png" Stretch="Fill"></Image>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
            <Button x:Name="WarriorButton" Click="WarriorButton_Click" Content="Воин"></Button>
            <Button x:Name="RogueButton" Click="RogueButton_Click">Жулик</Button>
            <Button x:Name="WizardButton" Click="WizardButton_Click">Волшебник</Button>
        </StackPanel>
    </Grid>
</Page>
